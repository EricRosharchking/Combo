<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@color/green</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="windowActionBar">false</item>
        <item name="colorAccent">@color/green</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>
    
    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="My.ActionBar.Style" parent="Widget.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="MyDialog" parent="Theme.AppCompat.Dialog">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/green</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorAlertDialogListItem">@color/grey</item>
        <!-- Used for the background -->
        <item name="android:background">@color/toolbarcolor</item>
    </style>
</resources>
