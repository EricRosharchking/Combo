<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#222222"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/control_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageButton
            android:id="@+id/record_button"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:maxHeight="70dp"
            android:maxWidth="70dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/startbutton"
            android:baselineAlignBottom="false"
            android:clickable="false"
            android:cropToPadding="false"
            android:background="#00FFFFFF" />
        <TextView
            android:id="@+id/record_status"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="@string/record_status"
            android:textColor="#FFFFFF"
            android:layout_gravity="bottom"
            android:paddingTop="15dp"
            android:paddingLeft="3dp"/>
        <Button
            android:id="@+id/tempo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tempo"
            android:background="#C8C8C8C8" />
        <Button
            android:id="@+id/time_signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_signature"
            android:onClick="changeTempo"
            android:background="#C8C8C8C8" />
<!--need to rename this botton-->
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/button"
            android:src="@drawable/metronome"
            android:onClick="startMetronome"
            android:scaleType="fitXY"
            android:maxHeight="70dp"
            android:maxWidth="70dp"
            android:baselineAlignBottom="false"
            android:clickable="false"
            android:cropToPadding="false"
            android:background="#00FFFFFF" />
        <SeekBar
            android:id="@+id/tempoSeekBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:progress="1"
            android:max="60"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/score"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/main_score"
            android:text="@string/main_score"
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:layout_marginTop="40dp"
            android:paddingTop="10dp"
            android:paddingLeft="55dp"
            android:paddingRight="55dp"
            android:textColor="#FFFFFF"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/octave"
        android:layout_width="600dp"
        android:layout_height="100dp"
        android:layout_marginBottom="190dp"
        android:layout_marginTop="50dp">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/loweroctave"
            android:src="@drawable/downbutton"
            android:background="#00FFFFFF"
            android:scaleType="fitXY"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="250dp">
        </ImageButton>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/upoctave"
            android:src="@drawable/upbutton"
            android:background="#00FFFFFF"
            android:scaleType="fitXY"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="250dp"/>

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/keyboard"
        android:layout_width="650dp"
        android:layout_height="190dp"
        android:layout_marginTop="120dp">

        <LinearLayout
            android:id="@+id/white_keys"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="false"
            android:layout_alignParentBottom="true"
            android:weightSum="1">

            <ImageButton
                android:layout_width="75dp"
                android:layout_height="190dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:text="@string/noteC"
                android:id="@+id/cnatural"
                android:src="@drawable/whitekey1"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:background="#00FFFFFF"
                android:layout_margin="0dp"
                android:layout_gravity="bottom|left|right|top"
                android:layout_marginTop="0dp"
                android:cropToPadding="false" />

            <ImageButton
                android:layout_width="75dp"
                android:layout_height="190dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:text="@string/noteD"
                android:id="@+id/dnatural"
                android:src="@drawable/whitekey2"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:background="#00FFFFFF"
                android:layout_margin="0dp"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="0dp"
                android:layout_gravity="bottom" />

            <ImageButton
                android:layout_width="75dp"
                android:layout_height="200dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:text="@string/noteE"
                android:id="@+id/enatural"
                android:src="@drawable/whitekey3"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:background="#00FFFFFF"/>

            <ImageButton
                android:layout_width="75dp"
                android:layout_height="200dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:text="@string/noteF"
                android:id="@+id/fnatural"
                android:src="@drawable/whitekey1"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:background="#00FFFFFF"/>

            <ImageButton
                android:layout_width="75dp"
                android:layout_height="200dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:text="@string/noteG"
                android:id="@+id/gnatural"
                android:src="@drawable/whitekey2"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:background="#00FFFFFF"/>

            <ImageButton
                android:layout_width="75dp"
                android:layout_height="200dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:text="@string/noteA"
                android:id="@+id/anatural"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/whitekey2"
                android:background="#00FFFFFF"/>

            <ImageButton
                android:layout_width="75dp"
                android:layout_height="200dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:text="@string/noteB"
                android:id="@+id/bnatural"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/whitekey3"
                android:background="#00FFFFFF" />
            <ImageButton
                android:layout_width="75dp"
                android:layout_height="200dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:text="@string/noteC"
                android:id="@+id/highcnatural"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/whitekey1"
                android:background="#00FFFFFF"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/black_keys"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_alignParentRight="false"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/white_keys"
            android:layout_alignParentTop="false">

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:text="@string/noteCs"
                android:id="@+id/csharp"
                android:layout_marginLeft="0dp"
                android:layout_marginStart="42dp"
                android:layout_gravity="bottom|left|right|top"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/blackkey"
                android:background="#00FFFFFF"/>

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginLeft="0dp"
                android:layout_marginStart="20dp"
                android:text="@string/noteEb"
                android:id="@+id/eflat"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/blackkey"
                android:background="#00FFFFFF"/>

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:text="@string/noteFs"
                android:id="@+id/fsharp"
                android:layout_marginLeft="0dp"
                android:layout_marginStart="87dp"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/blackkey"
                android:background="#00FFFFFF"/>

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginLeft="0dp"
                android:layout_marginStart="16dp"
                android:text="@string/noteGs"
                android:id="@+id/gsharp"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/blackkey"
                android:background="#00FFFFFF"/>

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginLeft="0dp"
                android:layout_marginStart="16dp"
                android:text="@string/noteBb"
                android:id="@+id/bflat"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/blackkey"
                android:background="#00FFFFFF"/>
            <ImageButton
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginLeft="0dp"
                android:layout_marginStart="87dp"
                android:text="@string/noteBb"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/blackkey"
                android:background="#00FFFFFF"
                android:id="@+id/highcsharp" />
            <!-- what the id for above blackkey:csharp?-->
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>
