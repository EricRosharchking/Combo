<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222222"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/control_panel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.85"
            android:background="#3A393A">

            <ImageButton
                android:id="@+id/record_button"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="#00FFFFFF"
                android:baselineAlignBottom="false"
                android:clickable="false"
                android:cropToPadding="false"
                android:maxHeight="70dp"
                android:maxWidth="70dp"
                android:scaleType="fitXY"
                android:src="@drawable/startbutton" />

            <TextView
                android:id="@+id/record_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.6"
                android:padding="7dp"
                android:text="@string/record_status"
                android:textColor="#FFFFFF" />

            <ImageButton
                android:id="@+id/playBack"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.9"
                android:background="#00FFFFFF"
                android:onClick="playBack"
                android:scaleType="fitXY"
                android:src="@drawable/playback" />

            <ImageButton
                android:id="@+id/metronomeButton"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="7dp"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:onClick="startMetronome"
                android:scaleType="fitXY"
                android:src="@drawable/metronome" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="0.15">

                <RadioGroup
                    android:id="@+id/timeSigRadioGroup"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:checkedButton="@+id/sound">

                    <RadioButton
                        android:id="@+id/tempo3"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:checked="false"
                        android:text="@string/timesig3"
                        android:textColor="#FFFFFF"
                        android:onClick="onRadioButtonClick"/>

                    <RadioButton
                        android:id="@+id/tempo4"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/timesig4"
                        android:textColor="#FFFFFF"
                        android:checked="true"
                        android:onClick="onRadioButtonClick"/>

                </RadioGroup>
            </LinearLayout>

            <SeekBar
                android:id="@+id/tempoSeekBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="2.9"
                android:max="60"
                android:layout_gravity="center_vertical"
                android:progress="1" />

            <TextView
                android:text="@string/seekbar"
                android:layout_weight="0.6"
                android:textColor="#FFFFFF"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:id="@+id/seekbarvalue" />
            <Button
                android:layout_weight="0.07"
                android:id="@+id/buttonBack"
                android:layout_width="68dp"
                android:background="#484848"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/back"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="15dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/score"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1.4"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/loweroctave"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#00FFFFFF"
                android:scaleType="fitXY"
                android:src="@drawable/down" />
            <TextView
                android:id="@+id/keyboardOctave2"
                android:text="@string/keyboard2"
                android:gravity="left|center_vertical"
                android:layout_width="50dp"
                android:textStyle="bold"
                android:layout_height="50dp"
                android:textSize="30sp"
                android:textColor="#009999" />
            <TextView
                android:id="@+id/main_score"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:paddingBottom="0dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="0dp"
                android:scrollbars="vertical"
                android:text="@string/main_score"
                android:textColor="#FFFFFF" />

            <ImageButton
                android:id="@+id/upoctave"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#00FFFFFF"
                android:scaleType="fitXY"
                android:src="@drawable/up" />

        </LinearLayout>

